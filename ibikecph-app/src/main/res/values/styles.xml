<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="iBikeCPHTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="iBikeCPHTheme.ActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/white</item>

        <item name="android:windowFullscreen">false</item>
        <item name="android:actionBarStyle">@style/IBCActionBar</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:itemTextAppearance">@style/IBCTextAppearance</item>
    </style>

    <style name="IBCActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/IBCActionBar</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:itemTextAppearance">@style/IBCTextAppearance</item>
    </style>

    <style name="IBCTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
