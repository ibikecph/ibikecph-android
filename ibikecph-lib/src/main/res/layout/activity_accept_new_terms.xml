<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spoiledmilk.ibikecph.AcceptNewTermsActivity"
    android:background="@color/app_primary_color"
    android:id="@+id/backgroundLayout">

    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">
            <TextView
                android:id="@+id/user_terms_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="user_terms_description"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/most_important_terms_are"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="most_important_terms_are"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
                android:id="@+id/termsText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="termsText"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/read_terms"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="read_terms"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="no_thanks"
                android:id="@+id/btnNoThanks"
                android:onClick="onNoThanksButtonClick"
                android:textColor="@color/black"
                android:background="@color/white"
                style="@style/Widget.AppCompat.Button.Borderless" />
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="accept"
                android:id="@+id/btnAcceptTerms"
                android:onClick="onAcceptButtonClick"
                android:textColor="@color/black"
                android:background="@color/white"
                style="@style/Widget.AppCompat.Button.Borderless" />
    </LinearLayout>

</RelativeLayout>
