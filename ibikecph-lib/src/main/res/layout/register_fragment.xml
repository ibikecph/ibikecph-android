<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:layout_marginTop="0dp"
    android:background="@null" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/White" >

        <TextView
            android:id="@+id/textCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/Black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textCreateAccount"
            android:layout_alignTop="@+id/textCreateAccount"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/textCreateAccount"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:src="@drawable/adduser" />

        <ImageButton
            android:id="@+id/imgCamera"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/textCreateAccount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="#EDEDED"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/camera" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgCamera"
            android:layout_alignLeft="@+id/imgCamera"
            android:layout_alignRight="@+id/imgCamera"
            android:layout_alignTop="@+id/imgCamera"
            android:background="@drawable/image_frame_white"
            android:contentDescription="@string/app_name" >
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgCamera"
            android:layout_alignLeft="@+id/imgCamera"
            android:layout_alignRight="@+id/imgCamera"
            android:layout_alignTop="@+id/imgCamera"
            android:background="@drawable/rounded_image_frame_grey"
            android:contentDescription="@string/app_name" >
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgCamera"
            android:layout_alignLeft="@+id/imgCamera"
            android:layout_alignRight="@+id/imgCamera"
            android:layout_alignTop="@+id/imgCamera"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/rounded_image_frame_white"
            android:contentDescription="@string/app_name" >
        </ImageView>

        <EditText
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgCamera"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_field_on_white"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textSize="14sp" >

            <requestFocus android:layout_width="wrap_content" />
        </EditText>

        <EditText
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textName"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/input_field_on_white"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/input_field_on_white"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/textPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/input_field_on_white"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="14sp" />

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textName"
                android:layout_below="@+id/textPasswordConfirm"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/termsAcceptanceCheckbox"
                />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/textPasswordConfirm"
                  android:layout_toRightOf="@+id/termsAcceptanceCheckbox"
                  android:layout_alignBaseline="@+id/termsAcceptanceCheckbox"
                  android:textColor="@color/black"
                  android:text="accept_user_terms"
                  android:id="@+id/termsAcceptanceLabel"
                />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/textPasswordConfirm"
                  android:layout_toRightOf="@+id/termsAcceptanceLabel"
                  android:layout_alignBaseline="@+id/termsAcceptanceLabel"
                  android:textColor="@color/black"
                  android:text="link"
                  android:id="@+id/termsAcceptanceLink"
                />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/LightGrey"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" >

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_grey_selector"
                android:minWidth="90dp"
                android:padding="5dp"
                android:textColor="@color/DarkGrey" />

            <com.spoiledmilk.ibikecph.controls.TexturedButton
                android:id="@+id/btnRegister"
                android:layout_width="90dp"
                android:layout_height="41dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textColor="@color/White" />
        </RelativeLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" >
    </ProgressBar>

</RelativeLayout>