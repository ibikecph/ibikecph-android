<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.spoiledmilk.ibikecph.tracking.TrackingActivity"
        android:orientation="vertical"
        >


    <TextView
        android:id="@+id/tracking_activity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" android:layout_row="0" android:layout_column="0"/>
    <TextView
        android:id="@+id/tracking_activity_since"
        android:layout_below="@id/tracking_activity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" android:layout_row="0" android:layout_column="1"/>
    <GridLayout  android:rowCount="6" android:columnCount="2" android:layout_width="match_parent"
                 android:layout_height="wrap_content">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/distanceTextView"
                android:textSize="60dp" android:layout_row="1"
                android:layout_column="0" android:layout_margin="20dp" android:gravity="left"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/speedTextView"
                android:textSize="60dp" android:layout_row="1" android:layout_column="1" android:layout_margin="20dp"
                android:gravity="right"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/avgPerTrackDistanceTextView"
                android:textSize="60dp"
                android:layout_row="2" android:layout_column="0" android:layout_margin="20dp" android:gravity="left"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/timeTextView"
                android:textSize="60dp"
                android:layout_row="2" android:layout_column="1" android:layout_margin="20dp" android:gravity="right"/>

    </GridLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/trackingStatusTextView"
            android:layout_centerHorizontal="true" android:layout_marginTop="56dp" android:visibility="invisible"
            android:layout_row="3" android:layout_column="0"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start tracking"
            android:id="@+id/btnStartTracking" android:layout_centerVertical="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:onClick="btnStartTrackingOnClick"
            android:visibility="invisible" android:layout_row="3" android:layout_column="1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop tracking"
            android:id="@+id/btnStopTracking"
            android:onClick="btnStopTrackingOnClick" android:layout_alignTop="@+id/btnStartTracking"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:visibility="invisible"
            android:layout_row="5" android:layout_column="0"/>

</LinearLayout>