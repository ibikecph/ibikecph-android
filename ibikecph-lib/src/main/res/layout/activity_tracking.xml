<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.spoiledmilk.ibikecph.tracking.TrackingActivity">

    <TextView
        android:id="@+id/tracking_activity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tracking_activity_since"
        android:layout_below="@id/tracking_activity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tracking_stats"
        android:text="TODO: statistics"
        android:layout_below="@+id/tracking_activity_since"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start tracking"
            android:id="@+id/btnStartTracking" android:layout_centerVertical="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:onClick="btnStartTrackingOnClick"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop tracking"
            android:id="@+id/btnStopTracking"
            android:onClick="btnStopTrackingOnClick" android:layout_alignTop="@+id/btnStartTracking"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/distanceTextView"
            android:layout_marginTop="45dp" android:layout_below="@+id/tracking_stats"
            android:layout_alignRight="@+id/btnStartTracking" android:layout_alignEnd="@+id/btnStartTracking"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/speedTextView"
            android:layout_alignTop="@+id/distanceTextView" android:layout_toRightOf="@+id/tracking_stats"
            android:layout_toEndOf="@+id/tracking_stats"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/avgPerTrackDistanceTextView"
            android:layout_alignTop="@+id/timeTextView" android:layout_alignLeft="@+id/distanceTextView"
            android:layout_alignStart="@+id/distanceTextView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/timeTextView"
            android:layout_above="@+id/btnStopTracking" android:layout_alignLeft="@+id/btnStopTracking"
            android:layout_alignStart="@+id/btnStopTracking"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/trackingStatusTextView" android:layout_below="@+id/btnStartTracking"
            android:layout_centerHorizontal="true" android:layout_marginTop="56dp"/>

</RelativeLayout>
