<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.spoiledmilk.ibikecph.tracking.TrackingSettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tracking_enable_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:id="@+id/tracking_enable_switch"
        android:onClick="onEnableTrackingClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/notify_milestone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tracking_enable_text"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:id="@+id/notify_milestone_checkbox"
        android:onClick="onNotifyMilestone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_below="@+id/tracking_enable_switch"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/notify_weekly_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notify_milestone_text"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:id="@+id/notify_weekly_checkbox"
        android:onClick="onNotifyWeekly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_below="@+id/notify_milestone_checkbox"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/share_data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notify_weekly_text"
        android:layout_alignParentLeft="true" />

    <Switch
        android:id="@+id/share_data_switch"
        android:onClick="onShareData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_below="@+id/notify_weekly_checkbox"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/share_data_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_data_switch"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/share_data_usage_text"
        android:onClick="onUsageClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_data_info_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/share_data_terms_text"
        android:onClick="onTermsClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_data_usage_text"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
