    <ImageView
        android:id="@+id/imgClounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/splash_sky"
        android:contentDescription="@string/app_name"
        android:padding="0dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgClounds"
        android:layout_centerHorizontal="true"
        android:background="@drawable/splash_illustration"
        android:contentDescription="@string/app_name"
        android:padding="0dp" />

    <TextView
        android:id="@+id/textHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgSwiper"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imgSwiper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textLoginExplanation"
        android:layout_alignLeft="@+id/textLoginExplanation"
        android:layout_alignRight="@+id/textLoginExplanation"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:paddingLeft="35dp"
        android:text=""
        android:textColor="@color/Black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textLoginExplanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnFacebookLogin"
        android:layout_alignLeft="@+id/btnFacebookLogin"
        android:layout_alignRight="@+id/btnFacebookLogin"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text=""
        android:textColor="@color/Black"
        android:textSize="12sp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/splash_grass_transparent"
        android:contentDescription="@string/app_name"
        android:padding="0dp" />

    <Button
        android:id="@+id/btnFacebookLogin"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_above="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/facebook_login_selector"
        android:onClick="onFacebookLoginClick"
        android:paddingLeft="10dp"
        android:textColor="@color/White"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/buttonsContainer"
        android:layout_alignLeft="@+id/btnFacebookLogin"
        android:layout_alignRight="@+id/btnFacebookLogin"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_standard_selector"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:textColor="@color/Black" />

