<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".RemindersSplashActivity" >

    <ImageView
        android:id="@+id/imgClounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/splash_sky"
        android:contentDescription="@string/app_name"
        android:padding="0dp" />

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/home_btn_inactive" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:gravity="center"
        android:text=""
        android:textColor="#F36D00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textReminders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/DarkGrey"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/splash_grass_transparent"
        android:contentDescription="@string/app_name"
        android:padding="0dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/divider"
        android:layout_below="@+id/textReminders"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@null" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f1f1f1" >

            <View
                android:id="@+id/topBorder"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:background="#AEAEAE" />

            <View
                android:id="@+id/rightBorder"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/toggleButton5"
                android:layout_alignRight="@id/topBorder"
                android:layout_below="@id/topBorder"
                android:layout_marginBottom="-10dp"
                android:background="#AEAEAE" />

            <View
                android:id="@+id/leftBorder"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/toggleButton5"
                android:layout_alignLeft="@id/topBorder"
                android:layout_below="@id/topBorder"
                android:layout_marginBottom="-10dp"
                android:background="#AEAEAE" />

            <View
                android:id="@+id/bottomBorder"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/rightBorder"
                android:layout_alignLeft="@+id/leftBorder"
                android:layout_alignRight="@+id/rightBorder"
                android:background="#AEAEAE" />

            <ImageView
                android:id="@+id/toggleButton1"
                android:layout_width="94dp"
                android:layout_height="40dp"
                android:layout_below="@id/topBorder"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/rightBorder"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/switch_off" />

            <View
                android:id="@+id/divider1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/leftBorder"
                android:layout_alignRight="@+id/rightBorder"
                android:layout_below="@+id/toggleButton1"
                android:layout_marginTop="5dp"
                android:background="#AEAEAE" />

            <ImageView
                android:id="@+id/toggleButton2"
                android:layout_width="94dp"
                android:layout_height="40dp"
                android:layout_below="@+id/toggleButton1"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/rightBorder"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/switch_off" />

            <View
                android:id="@+id/divider2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/leftBorder"
                android:layout_alignRight="@+id/rightBorder"
                android:layout_below="@+id/toggleButton2"
                android:layout_marginTop="5dp"
                android:background="#AEAEAE" />

            <ImageView
                android:id="@+id/toggleButton3"
                android:layout_width="94dp"
                android:layout_height="40dp"
                android:layout_below="@+id/toggleButton2"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/rightBorder"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/switch_off" />

            <View
                android:id="@+id/divider3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/leftBorder"
                android:layout_alignRight="@+id/rightBorder"
                android:layout_below="@+id/toggleButton3"
                android:layout_marginTop="5dp"
                android:background="#AEAEAE" />

            <ImageView
                android:id="@+id/toggleButton4"
                android:layout_width="94dp"
                android:layout_height="40dp"
                android:layout_below="@+id/toggleButton3"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/rightBorder"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/switch_off" />

            <View
                android:id="@+id/divider4"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/leftBorder"
                android:layout_alignRight="@+id/rightBorder"
                android:layout_below="@+id/toggleButton4"
                android:layout_marginTop="5dp"
                android:background="#AEAEAE" />

            <ImageView
                android:id="@+id/toggleButton5"
                android:layout_width="94dp"
                android:layout_height="40dp"
                android:layout_below="@+id/toggleButton4"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/rightBorder"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/switch_off" />

            <TextView
                android:id="@+id/textMonday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/toggleButton1"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/leftBorder"
                android:text=""
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/textTuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/toggleButton2"
                android:layout_alignLeft="@+id/textMonday"
                android:layout_marginBottom="12dp"
                android:text=""
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/textWednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/toggleButton3"
                android:layout_alignLeft="@+id/textTuesday"
                android:layout_marginBottom="12dp"
                android:text=""
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/textThursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/toggleButton4"
                android:layout_alignLeft="@+id/textWednesday"
                android:layout_marginBottom="12dp"
                android:text=""
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/textFriday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/toggleButton5"
                android:layout_alignLeft="@+id/textThursday"
                android:layout_marginBottom="12dp"
                android:text=""
                android:textColor="@color/Black" />
        </RelativeLayout>
    </ScrollView>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/bottomContainer"
        android:layout_centerHorizontal="true"
        android:background="#d7d7d7" />

    <RelativeLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btnSave"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/btnSave"
        android:layout_toRightOf="@+id/imgDivider"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onBtnSkipClick"
        android:paddingBottom="0dp"
        android:paddingTop="0dp" >

        <ImageView
            android:id="@+id/imgSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:src="@drawable/enter_icon" />

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/imgSkip"
            android:background="@null"
            android:gravity="left"
            android:onClick="onBtnSkipClick"
            android:text=""
            android:textColor="#F36D00"
            android:textSize="12dp" >
        </Button>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgDivider"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/bottomContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/btnSave"
        android:background="@drawable/bottom_divider_vertical"
        android:contentDescription="@string/app_name" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/bottomContainer"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_blue_selector"
        android:gravity="center"
        android:onClick="onBtnSaveClick"
        android:text=""
        android:textColor="@color/White" >
    </Button>

</RelativeLayout>