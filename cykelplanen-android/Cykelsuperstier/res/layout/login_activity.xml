<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android:id="@+id/textLoginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text=""
            android:textColor="@color/TextGrey"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textLoginTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/input_on_black_selector"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="25dp"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textEmail"
            android:layout_alignRight="@+id/textEmail"
            android:layout_alignTop="@+id/textEmail"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:paddingRight="10dp"
            android:paddingLeft="0dp"
            android:src="@drawable/icon_email" />

        <EditText
            android:id="@+id/textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textEmail"
            android:layout_alignRight="@+id/textEmail"
            android:layout_below="@+id/textEmail"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_on_black_selector"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="25dp"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textPassword"
            android:layout_alignRight="@+id/textPassword"
            android:layout_alignTop="@+id/textPassword"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:paddingLeft="0dp"
            android:paddingRight="8dp"
            android:src="@drawable/icon_pass" />

        <com.spoiledmilk.ibikecph.controls.TexturedButton
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/textEmail"
            android:layout_alignRight="@+id/textEmail"
            android:layout_below="@+id/textPassword"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:textColor="@color/White"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/TextGrey"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnFacebookLogin"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/btnLogin"
            android:layout_alignRight="@+id/btnLogin"
            android:layout_below="@+id/textOr"
            android:layout_marginTop="10dp"
            android:background="@drawable/facebook_login_selector"
            android:contentDescription="@string/app_name"
            android:paddingLeft="-8dp"
            android:paddingRight="0dp"
            android:textColor="@color/White"
            android:textSize="14sp" />

        <!-- <TextView -->
        <!-- android:id="@+id/textFacebookLogin" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_alignTop="@+id/btnFacebookLogin" -->
        <!-- android:layout_centerHorizontal="true" -->
        <!-- android:paddingBottom="15dp" -->
        <!-- android:text="" -->
        <!-- android:textColor="@color/White" -->
        <!-- android:textSize="12sp" /> -->

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/textEmail"
            android:layout_alignRight="@+id/textEmail"
            android:layout_below="@+id/btnFacebookLogin"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_white_selector"
            android:text=""
            android:textColor="#4d4d4d"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/btnRegister"
            android:layout_alignTop="@id/btnRegister"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:paddingRight="172dp"
            android:paddingLeft="0dp"
            android:src="@drawable/icon_email" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

</ScrollView>