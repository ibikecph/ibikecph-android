<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White" >

    <ImageView
        android:id="@+id/imgClounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/splash_sky"
        android:contentDescription="@string/app_name"
        android:padding="0dp" />

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/home_btn_inactive" />

    <ImageView
        android:id="@+id/imgPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textBreakRoute"
        android:layout_marginTop="4dp"
        android:background="@drawable/splash_break_route"
        android:contentDescription="@string/app_name"
        android:padding="0dp" />

    <ImageView
        android:id="@+id/imgGrass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-150dp"
        android:background="@drawable/splash_grass_transparent"
        android:contentDescription="@string/app_name"
        android:padding="0dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textBreakRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text=""
        android:textColor="@color/White"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/btnSkip"
        android:layout_centerHorizontal="true"
        android:background="#d7d7d7" />

    <TextView
        android:id="@+id/textBreakRouteHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSkip"
        android:layout_marginBottom="1px"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="25dp"
        android:gravity="left"
        android:text=""
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnSkip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#ffffff"
        android:gravity="center"
        android:onClick="onBtnSkipClick"
        android:textColor="@color/White"
        android:textSize="12sp" >
    </Button>

    <RelativeLayout
        android:id="@+id/skipContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnSkip"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnSkip"
        android:layout_marginRight="25dp"
        android:background="@null" >

        <TextView
            android:id="@+id/textSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:text=""
            android:textColor="@color/Black"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/imgSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/textSkip"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:src="@drawable/enter_icon" />
    </RelativeLayout>

</RelativeLayout>